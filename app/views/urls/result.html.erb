<h1 class="text-3xl font-bold mb-4">Shortened URL</h1>

<% if @url %>
  <p class="mb-2"><strong>Original URL:</strong> <%= @url.original_url %></p>
  <p class="mb-2"><strong>Shortened URL:</strong> 
    <a href="<%= short_url_url(@url.short_code) %>" target="_blank" class="text-blue-500 underline">
      <%= request.base_url + "/" + @url.short_code %>
    </a>
  </p>
  <p class="mb-4"><strong>Expiration Time:</strong> <%= @url.time_expired %></p>
  <button onclick="copyToClipboard('<%= request.base_url + "/" + @url.short_code %>')" class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">Copy</button>
  <a href="<%= shortening_url_path %>" class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-gray-600 hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 ml-4">Home</a>
<% else %>
  <p>URL not found or expired.</p>
  <a href="<%= shortening_url_path %>" class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-gray-600 hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500">Home</a>
<% end %>

<script>
  function copyToClipboard(text) {
    navigator.clipboard.writeText(text).then(function() {
      alert('Copied to clipboard');
    }, function(err) {
      console.error('Could not copy text: ', err);
    });
  }
</script>